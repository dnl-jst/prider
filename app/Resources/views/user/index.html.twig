{% extends 'base.html.twig' %}

{% block body %}
    <h1>{% trans %}Users{% endtrans %}</h1>

    <div class="mb-3">
        <a class="btn btn-primary" href="{{ path('user_add') }}"><i class="fa fa-plus"></i></a>
    </div>

    <div class="row">
    {% for user in users %}
        <div class="col-xs-12 col-sm-4 pb-3">
            <div class="card text-center">
                <div class="card-block">
                    <h4 class="card-title">{{ user.name }}</h4>
                    <h6 class="card-subtitle mb-2 text-muted">{{ user.email }}</h6>

                    <a class="btn btn-primary" href="{{ path('user_edit', {id: user.id}) }}"><i class="fa fa-edit"></i></a>
                    <a class="btn btn-primary" href="{{ path('user_delete', {id: user.id}) }}"><i class="fa fa-times"></i></a>
                </div>
            </div>
        </div>
    {% endfor %}
    </div>
{% endblock %}
